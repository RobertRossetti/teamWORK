{% extends "templates/skeleton.njk" %}
{% set title = "Log In" %}
{% block content %}
<form method="post">
 <div class="form-group" id="email">
   <label for="username_or_email_input" style="font-weight:bold">Username or Email Address</label>
   <input type="text" name="username_or_email" class="form-control" id="username_or_email_input" placeholder="Enter Username or Email">
 </div>

 <div class="form-group" id="pass">
   <label for="password_input" id="passLabel" style="font-weight:bold">Password</label>
   <input type="password" name="password" class="form-control" id="password_input" placeholder="Enter Password">
 </div>
 
 <input type= "submit" value="Log in" align="right" class="button">
 <br>
   <a href='/register' align="right" class="emphatic-link">New Member? Sign up!</a>
</form>
{% endblock %}
