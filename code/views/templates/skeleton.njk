<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="/favicon.png" />

    <!-- global scripts/styles -->
    <link rel="stylesheet" href="/global.css">
    <script src="/global.js"></script>
    
    <!-- page-specific scripts/styles -->
    {% block head %}
    {% endblock %}
    
    {% if title %}
      <title>{{title}} - Natural Neighbors</title>
    {% else %}
      <title>Natural Neighbors</title>
    {% endif %}
  </head>
  <body>
  	<div id="page">
      <div id="title">
        <a href="/"><img src="/logo-long.png" alt="Natural Neighbors" /></a>
      </div>
      {% include "templates/navbar.njk" %}
      <div id="content">
        {% if errors %}
          {% for error in errors %}
            <div class="error">
              {{ error }}
            </div>
          {% endfor %}
        {% endif %}
        {% if title %}
          <h2 id="pagetitle">{{title}}</h2>
        {% endif %}

        {% block content %}
        {% endblock %}
  		</div>
      <div id="footer">
        Copyright &copy; teamWORK
      </div>
  	</div>
  </body>
</html>
